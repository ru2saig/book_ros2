<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
  <!-- ////////// -->
  <BehaviorTree ID="BehaviorTree">
    <ReactiveSequence>
      <ReactiveFallback>
        <Inverter>
          <Action ID="AnyObstacle" minDist="1.0"/>
        </Inverter>
        <Action ID="MoveAway" minDist="1.5"/>
      </ReactiveFallback>
      <Action ID="Onward"/>
    </ReactiveSequence>
  </BehaviorTree>
  <!-- ////////// -->
  <TreeNodesModel>
    <Action ID="AnyObstacle">
      <input_port default="1.0" name="minDist">Any entity that has a distance less than this is considered an obstacle</input_port>
    </Action>
    <Action ID="MoveAway">
      <input_port default="1.5" name="minDist">Any entity that has a distance less than this is considered an obstacle</input_port>
    </Action>
    <Action ID="Onward"/>
  </TreeNodesModel>
  <!-- ////////// -->
</root>
